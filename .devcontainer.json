{
    "image": "mcr.microsoft.com/devcontainers/python:3.13",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "22"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "-ms-python.autopep8",
                "-dbaeumer.vscode-eslint"
            ]
        }
    },
    "postCreateCommand": "cd backend && python -m venv .venv && . .venv/bin/activate && pip install --upgrade pip && pip install -r requirements.txt && cd .. && cd frontend && npm install",
    "forwardPorts": [
        5173,
        8000,
        11434
    ],
    "remoteEnv": {
        "OLLAMA_HOST": "http://host.docker.internal:11434"
    }
}